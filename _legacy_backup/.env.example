# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/leoncast

# Redis
REDIS_URL=redis://redis:6379

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Authentication
JWT_SECRET=change-this-in-production-to-a-long-random-string
COOKIE_SECRET=change-this-in-production-to-another-long-random-string
ADMIN_EMAIL=admin@leoncast.com
ADMIN_PASSW=admin

# Streaming
RESTREAMER_URL=rtmp://localhost/live
RENDERER_URL=http://localhost:5000

# PostgreSQL (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=leoncast

# Optional
LOG_LEVEL=info
CORS_ORIGIN=*
ENABLE_WEBSOCKET=true
ENABLE_METRICS=false
SCENARIOS_PATH=./apps/scenarios
